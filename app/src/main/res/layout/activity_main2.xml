<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/jpg"
        android:layout_width="345dp"
        android:layout_height="170dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/jpg1"
        app:layout_constraintBottom_toTopOf="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="114dp"
        android:text="The Colosseum"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/jpg"
        app:layout_constraintStart_toStartOf="@+id/jpg"
        app:layout_constraintTop_toTopOf="@+id/jpg"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/jpg"
        app:layout_constraintTop_toTopOf="@+id/jpg"
        app:layout_constraintBottom_toBottomOf="@+id/jpg"
        android:text="One of the most recognizable sites in the world"
        android:textColor="#999999"
        android:textSize="12sp"
        android:layout_marginTop="137dp"/>

    <View
        android:id="@+id/bottom1"
        android:layout_width="112dp"
        android:layout_height="93dp"
        android:layout_marginLeft="69dp"
        android:background="@drawable/fotoo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jpg" />

    <ImageButton
        android:id="@+id/camera"
        android:background="@drawable/vek"
        app:layout_constraintBottom_toBottomOf="@+id/bottom1"
        app:layout_constraintEnd_toEndOf="@+id/bottom1"
        app:layout_constraintStart_toStartOf="@+id/bottom1"
        app:layout_constraintTop_toTopOf="@+id/bottom1"
        android:layout_width="25sp"
        android:layout_height="25sp" />

    <View
        android:id="@+id/bottom2"
        android:layout_width="112dp"
        android:layout_height="93dp"
        app:layout_constraintStart_toEndOf="@id/bottom1"
        app:layout_constraintTop_toBottomOf="@id/jpg"
        android:layout_marginLeft="7dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/fotoo"
        />

    <ImageButton
        android:id="@+id/lesson"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:background="@drawable/vek1"
        app:layout_constraintBottom_toBottomOf="@+id/bottom2"
        app:layout_constraintEnd_toEndOf="@+id/bottom2"
        app:layout_constraintStart_toStartOf="@+id/bottom2"
        app:layout_constraintTop_toTopOf="@+id/bottom2"
        />
    <View
        android:id="@+id/bottom3"
        android:layout_width="112dp"
        android:layout_height="93dp"
        app:layout_constraintStart_toEndOf="@id/bottom2"
        app:layout_constraintTop_toBottomOf="@id/jpg"
        android:layout_marginLeft="7dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/fotoo"
        />
    <ImageButton
        android:id="@+id/google"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:background="@drawable/vek3"
        app:layout_constraintBottom_toBottomOf="@+id/bottom3"
        app:layout_constraintEnd_toEndOf="@+id/bottom3"
        app:layout_constraintStart_toStartOf="@+id/bottom3"
        app:layout_constraintTop_toTopOf="@+id/bottom3"
        />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="312"
        android:textColor="@color/black"
        android:textSize="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jpg" />

    <Button
        android:layout_width="190dp"
        android:layout_height="44dp"
        android:layout_marginTop="96dp"
        android:background="#F44336"
        android:text="Перейти"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_number" />


</androidx.constraintlayout.widget.ConstraintLayout>